<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivityPharmacy">

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="167dp"
        android:layout_height="196dp"
        android:text="@string/ManangeReqBtnText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#0d6efd"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/channelingBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461"
        tools:ignore="TextContrastCheck" />

    <ImageView
        android:id="@+id/pharmacyPageImage"
        android:layout_width="218dp"
        android:layout_height="166dp"
        android:contentDescription="@string/pharmacyimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013"
        app:srcCompat="@drawable/pharmacy_page_image" />

    <Button
        android:id="@+id/channelingBtn"
        android:layout_width="167dp"
        android:layout_height="196dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/RequestDeliveryBtnText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#0d6efd"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toStartOf="@+id/joinBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/requestHistoryBtn"
        android:layout_width="167dp"
        android:layout_height="196dp"
        android:layout_marginTop="8dp"
        android:text="@string/RequestHistoryBtnText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#0d6efd"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/channelingBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>