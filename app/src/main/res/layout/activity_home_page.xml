<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeCare"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <ImageView
        android:id="@+id/home_page_image"
        android:layout_width="397dp"
        android:layout_height="227dp"
        android:contentDescription="@string/hospitalecosystemimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_page_image"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/joinBtn"
        android:layout_width="167dp"
        android:layout_height="196dp"
        android:text="@string/JoinBtnLabelText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#0d6efd"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/channelingBtn"
        app:layout_constraintTop_toBottomOf="@+id/home_page_image"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/channelingBtn"
        android:layout_width="167dp"
        android:layout_height="196dp"
        android:text="@string/ChannelingBtnLabelText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#0d6efd"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toStartOf="@+id/joinBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_page_image" />

    <Button
        android:id="@+id/pharmacyBtn"
        android:layout_width="167dp"
        android:layout_height="196dp"
        android:layout_marginTop="32dp"
        android:text="@string/PhamacyBtnLabelText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#0d6efd"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toStartOf="@+id/HomeCareBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/channelingBtn" />

    <Button
        android:id="@+id/HomeCareBtn"
        android:layout_width="167dp"
        android:layout_height="196dp"
        android:layout_marginTop="28dp"
        android:text="@string/HomeCareBtnLabelText"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#0d6efd"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pharmacyBtn"
        app:layout_constraintTop_toBottomOf="@+id/joinBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>