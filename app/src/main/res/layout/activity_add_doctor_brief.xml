<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/doctorview"
    style="@style/text"
    tools:context=".admin_add_doc_brief">

    <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="297dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/Welcome_banner"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/doc_img"
        android:layout_width="413dp"
        android:layout_height="181dp"
        android:contentDescription="@string/pharmacy_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_txt"
        app:srcCompat="@drawable/doctor" />

    <Button
        android:id="@+id/addDoc"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:clickable="false"
        android:longClickable="false"
        android:text="@string/add_doc"
        android:textSize="15sp"
        app:cornerRadius="40dp"
        app:layout_constraintTop_toBottomOf="@+id/doc_img" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="280dp"
        app:layout_constraintTop_toBottomOf="@+id/addDoc"
        tools:layout_editor_absoluteX="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/DocView"
                android:layout_width="match_parent"
                android:layout_height="457dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>