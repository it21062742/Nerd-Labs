<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TC_Agree_chkBX"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_register">

    <TextView
        android:id="@+id/sighnUP_lbl"
        android:layout_width="93dp"
        android:layout_height="31dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="33dp"
        android:shadowColor="#3D5AFE"
        android:text="@string/sign_in_signup"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Email_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:text="@string/sign_in_email"
        android:textColor="#0C26AE"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sighnUP_lbl" />

    <EditText
        android:id="@+id/EmailAddress"
        android:layout_width="292dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="3dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/email_submit"
        android:inputType="textNoSuggestions|textWebEmailAddress|textEmailAddress"
        android:textColorHint="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email_lbl" />


    <TextView
        android:id="@+id/password_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:text="@string/sign_in_pwd"
        android:textColor="#0C26AE"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailAddress" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="3dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/pwd_submit"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_lbl"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <TextView
        android:id="@+id/password_lbl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="40dp"
        android:text="@string/re_sign_in_pwd"
        android:textColor="#0C26AE"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Password2"
        android:layout_width="295dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="3dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/re_pwd_submit"
        android:inputType="textPassword"
        android:textColorHint="#757575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_lbl2"
        tools:ignore="MissingConstraints,DuplicateSpeakableTextCheck" />

    <CheckBox
        android:id="@+id/TandC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/TandC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password2" />

    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="35dp"
        android:text="@string/sign_in_signup"
        app:cornerRadius="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TandC"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/Lbl_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="60dp"
        android:text="@string/have_an_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_btn" />

    <Button
        android:id="@+id/btn_signIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/sign_in_submit"
        android:textColor="#DD2C00"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FAFAFA"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/Lbl_acc"
        app:layout_constraintStart_toEndOf="@+id/Lbl_acc"
        app:rippleColor="#FFFFFF"
        app:strokeColor="#00FFFFFF" />


</androidx.constraintlayout.widget.ConstraintLayout>